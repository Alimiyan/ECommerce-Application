<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>Item</td>
                    <th>Title</td>
                    <th>Quantity</td>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="width: 70px;height: 70px;" src="/product-images/{{this.products._id}}.jpg" alt=""></td>
                    <td>{{this.products.Name}}</td> 
                    
                    <td>
                        <button name="btnp" class="cart-items-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.products._id}}',-1)">-</button>{{this.quantity}}<button class="cart-items-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.products._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                {{/each}}
                </tr>   
            </tbody>
        </table>
    </div>
</section>
