
  <section>
    <div class="container mt-4">
      <div class="row">
        {{#each products}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem;height: 25rem">
            <img class="card-img-top"
              src="/product-images/{{this.products._id}}.jpg"
              alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">{{this.products.Name}}</h5>
              <h5 class="card-title">{{this.products.Price}}/-</h5>
              <p class="card-text">{{this.products.Description}}</p>

            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
